{
  "version": 2,
  "name": "trading-models-api",
  "buildCommand": "npm install",
  "outputDirectory": "./",
  "includeFiles": [
    "models/**"
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/predict-crypto",
      "destination": "/api/predict-crypto.js"
    },
    {
      "source": "/api/predict-forex",
      "destination": "/api/predict-forex.js"
    },
    {
      "source": "/api/fetch-data",
      "destination": "/api/data-orchestrator.js"
    },
    {
      "source": "/api/get-predictions",
      "destination": "/api/get-predictions.js"
    },
    {
      "source": "/api/store-prediction",
      "destination": "/api/store-prediction.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ]
}